<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
	<name>RTAD Joomla Dump</name>
	<author>Vladimir 'def' T.</author>
	<creationDate>September 2018</creationDate>
	<copyright>(c) Vladimir Titov 2018</copyright>
	<license>GNU/GPL</license>
	<authorEmail>vvatitv@gmail.com</authorEmail>
	<authorUrl>https://rtad.ru</authorUrl>
	<version>1.0.0</version>
	<description><![CDATA[Joomla Dump like on Laravel and can disabled built-in libraries Jquery, bootstrap, Mootools]]></description>
	<files>
		<filename plugin="rtad_jdump">rtad_jdump.php</filename>
		<filename>index.html</filename>
		<filename>composer.json</filename>
		<filename>composer.lock</filename>
		<folder>lib</folder>
		<folder>vendor</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="mootools" type="radio" class="btn-group" default="1" description="Mootools in site" label="Mootools">
                    <option value="0">Disable</option>
                    <option value="1">Enable</option>
				</field>
                <field name="jquery" type="radio" class="btn-group" default="1" description="jQuery in site" label="jQuery">
                    <option value="0">Disable</option>
                    <option value="1">Enable</option>
                </field>
                <field name="bootstrap" type="radio" class="btn-group" default="1" description="Bootstrap in site" label="Bootstrap">
                    <option value="0">Disable</option>
                    <option value="1">Enable</option>
                </field>
			</fieldset>
		</fields>
	</config>
    <updateservers>
        <server type="extension" priority="1" name="RTAD Joomla Dump"><![CDATA[https://rtad.ru/joomla/plg_system_rtad_jdump.xml]]></server>
    </updateservers>
</extension>
